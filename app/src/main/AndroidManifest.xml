            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3741814945474848~6324451498"/>

        <activity android:name=".home.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home.NewPostActivity" />
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".login.RegisterActivity" />
        <activity android:name=".login.CompleteSetupActivity" />
        <activity android:name=".home.ViewPostActivity" />
        <activity android:name=".home.ViewImageActivity" />
        <activity android:name=".utils.SettingsActivity" />
        <activity android:name=".utils.ChangeEmailActivity" />
